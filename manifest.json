{
  "manifest_version": 3,
  "name": "Artha-Mitra: AI Stock Valuation Expert",
  "version": "1.2",
  "description": "AI-driven stock analysis with DCF, market intelligence, and Gemini capabilities.",
  "action": {
    "default_icon": {
      "48": "icons/icon48.png"
    },
    "default_title": "Artha-Mitra",
    "default_popup": "popup/popup.html"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "windows"
  ],
  "host_permissions": [
    "https://generativelanguage.googleapis.com/"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content_scripts/content.js"
      ]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  }
}
