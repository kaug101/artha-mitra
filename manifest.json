{
  "manifest_version": 3,
  "name": "Artha-Mitra: AI Stock Valuation Expert",
  "version": "1.1",
  "description": "AI-driven stock analysis with DCF, market intelligence, and Gemini Nano capabilities.",
  
  "permissions": [
    "storage",         
    "activeTab",
    "scripting",
    "windows"
  ],
  
  "host_permissions": [
    "https://generativelanguage.googleapis.com/",
    "https://financialmodelingprep.com/"
  ],
  
  "action": {
    "default_icon": {
      "48": "icons/icon48.png"
    },
    "default_title": "Artha-Mitra"
  },
  
  "background": {
    "service_worker": "background.js"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  }
}
